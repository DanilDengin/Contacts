<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_background"
    tools:context="com.example.lessons.ListFragment">

    <TextView
        android:id="@+id/contact1"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/style_main_frame"
        android:layout_marginHorizontal="20dp"
        app:barrierMargin="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/photoListTextView"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/style_frame"
        android:text=" Photo1"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@+id/contact1"
        app:layout_constraintTop_toTopOf="@+id/contact1" />

    <TextView
        android:id="@+id/nameListTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="@drawable/style_frame"
        android:paddingHorizontal="12dp"
        android:paddingBottom="20dp"
        android:text="Name"
        app:layout_constraintStart_toEndOf="@+id/photoListTextView"
        app:layout_constraintTop_toTopOf="@+id/photoListTextView" />


    <TextView
        android:id="@+id/numberListTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/style_frame"
        android:paddingHorizontal="12dp"
        android:paddingBottom="20dp"
        android:text="Number"
        app:layout_constraintBottom_toBottomOf="@+id/photoListTextView"
        app:layout_constraintStart_toStartOf="@+id/nameListTextView" />


</androidx.constraintlayout.widget.ConstraintLayout>
