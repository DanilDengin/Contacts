<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/detailsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/design_default_color_on_primary"
        android:clickable="true"
        tools:context="com.example.lessons.DetailsFragment" >

        <TextView
            android:id="@+id/photoTextView"
            android:layout_width="98dp"
            android:layout_height="98dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/style_frame"
            android:text="Photo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="@drawable/style_frame"
            android:paddingHorizontal="12dp"
            android:paddingBottom="20dp"
            android:text="Name"
            app:layout_constraintStart_toEndOf="@+id/photoTextView"
            app:layout_constraintTop_toTopOf="@+id/photoTextView" />

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/style_frame"
            android:paddingLeft="12dp"
            android:paddingBottom="48dp"
            android:text="Description"
            app:layout_constraintStart_toStartOf="@+id/eMail2TextView"
            app:layout_constraintTop_toBottomOf="@+id/eMail2TextView" />

        <TextView
            android:id="@+id/number1TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/style_frame"
            android:paddingLeft="12dp"
            android:text="Number"
            app:layout_constraintStart_toStartOf="@+id/photoTextView"
            app:layout_constraintTop_toBottomOf="@+id/photoTextView" />

        <TextView
            android:id="@+id/number2TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/style_frame"
            android:paddingLeft="12dp"
            android:text="Number2"
            app:layout_constraintStart_toStartOf="@+id/number1TextView"
            app:layout_constraintTop_toBottomOf="@+id/number1TextView" />

        <TextView
            android:id="@+id/eMail1TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/style_frame"
            android:paddingLeft="12dp"
            android:text="eMail"
            app:layout_constraintStart_toStartOf="@+id/number2TextView"
            app:layout_constraintTop_toBottomOf="@+id/number2TextView" />

        <TextView
            android:id="@+id/eMail2TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/style_frame"
            android:paddingLeft="12dp"
            android:text="eMail2"
            app:layout_constraintStart_toStartOf="@+id/eMail1TextView"
            app:layout_constraintTop_toBottomOf="@+id/eMail1TextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>