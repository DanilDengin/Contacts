<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/gray</item>
        <item name="textInputStyle">@style/Widget.MyApplication.TextInputLayout</item>
        <item name="textAppearanceBodyMedium">@style/Widget.MyApplication.TextView</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Primary</item>
    </style>

</resources>