<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lessons.themePicker.presentation.ThemePickerFragment">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioButtonPhoneTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/system_theme" />

        <RadioButton
            android:id="@+id/radioButtonLightTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/light_theme" />

        <RadioButton
            android:id="@+id/radioButtonNightTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/night_theme" />
    </RadioGroup>
</FrameLayout>