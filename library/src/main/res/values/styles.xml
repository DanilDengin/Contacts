<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="textAppearanceHeadline" format="reference" />
    <attr name="textAppearanceBodyLarge" format="reference" />
    <attr name="textAppearanceBodyMedium" format="reference" />
    <attr name="textAppearanceSwitchCompat" format="reference" />
    <attr name="textColorToolbar" format="color" />

    <style name="Widget.MyApplication.HeaderTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.MyApplication.BodyLargeTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.MyApplication.BodyMediumTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.MyApplication.TextAppearanceSwitchCompat" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">12sp</item>
    </style>

</resources>