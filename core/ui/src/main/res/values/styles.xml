<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.MyApplication.HeaderTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.MyApplication.BodyLargeTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.MyApplication.BodyMediumTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.MyApplication.TextAppearanceSwitchCompat" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">12sp</item>
    </style>

    <declare-styleable name="CircleCatProgressBar">
        <attr name="animationDurationCCPBmsec" format="integer" />
    </declare-styleable>
</resources>